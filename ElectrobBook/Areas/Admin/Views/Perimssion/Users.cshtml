@model IEnumerable<UsersView>
@{


  }
<!-- Required Bootstrap CSS -->


<div class="container">
    <hr />


    <hr />
    <h1 class="my-4">Manage Forms</h1>
        <a type="button" class="btn btn-primary" asp-action="Register" asp-controller="Account" >Create New User</a>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-9"></div>
    </div>
    <hr />

    <table class="table table-dark table-striped">
        <thead>
            <tr>
               
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Opreation</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model.GroupBy(item => item.Id))
            {
        <tr>
           
            <td>@group.First().Name</td>
            <td>@group.First().Email</td>
            <td>@string.Join(" | ", group.Select(item => item.Role.ToString()).Distinct())</td>
            <td>
                <a class="btn btn-danger btn-sm" asp-action="DeleteUser" asp-route-Id="@group.First().Id">Delete</a>
                <a class="btn btn-success btn-sm" asp-action="UserData" asp-route-Id="@group.First().Id">Update</a>
                <a class="btn btn-success btn-sm" asp-action="UserData" asp-route-Id="@group.First().Id">Change Password</a>
                <a class="btn btn-outline-info btn-sm" asp-action="AssignRole" asp-route-Id="@group.First().Id">Assign Role</a>
            </td>
        </tr>
            }
        </tbody>
    </table>
</div>

