@model LogCategoriesViewModel
@{
    ViewData["Title"] = "Role";
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
}
<!-- Required Bootstrap CSS -->


<div class="container">
    <hr />


    <hr />
    <h1 class="my-4">Manage Forms</h1>
        <a type="button" class="btn btn-primary" asp-action="Create"  >Create New Category</a>
           <a type="button" class="btn btn-info" asp-action="LogCategories"  >Log Categories</a>
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-9"></div>
    </div>
    <hr />

    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>CategoryName</th>
                   <th>DateTime</th>
            </tr>
        </thead>
        <tbody>

           
                @foreach (var item in Model.logcategories)
                {
                <tr>
                    <td>@item.Id</td>
                        <td>@item.Action</td>
                    <td>@item.Category.Name</td>
                    <td>@item.DateTime</td>
                    <td>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
                }
            
        </tbody>
    </table>
</div>





